<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_3"
    tools:context=".ui.DetailActivity">
    <Button
        android:id="@+id/Backbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/baseline_arrow_back_24"
        android:background="@color/cardview_shadow_end_color"
        android:layout_marginLeft="16dp"/>

    <ImageView
        android:id="@+id/imStadium"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/old_trafford" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="#43024E"
        android:elevation="16dp"
        android:layout_marginTop="300dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:cardBackgroundColor="@color/material_on_surface_stroke"
            android:elevation="16dp"
            android:layout_marginTop="16dp">
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/material_on_surface_stroke"
                android:elevation="16dp">

                <ImageView
                    android:id="@+id/imgDetail"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/a_mu" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvNameDe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="Name Club"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detail Club"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                android:textStyle="italic"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="62dp"/>
            <Button
                android:id="@+id/btnFavourite"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:hint="Favourite"
                android:background="@drawable/bg_bt_favourite"
                android:elevation="16dp"
                android:textSize="24sp"
                android:textColorHint="@color/white"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="100dp"
                android:drawableTop="@drawable/baseline_favorite_border_24"/>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</RelativeLayout>