<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".ui.ImportTablesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logo2"/>
        <com.example.doanmh.font.OswaldTV
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Import Club"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:layout_gravity="center" />
        <FrameLayout
            android:layout_width="400dp"
            android:layout_height="10dp"
            android:background="@drawable/pl_theme"
            android:layout_gravity="center_horizontal" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <EditText
                android:id="@+id/edSTT"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="@color/dot_light_screen1"
                android:fontFamily="sans-serif-light"
                android:hint="STT"
                android:paddingLeft="8dp"
                android:textAlignment="center"
                android:textSize="22sp"
                android:elevation="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edNameClub"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="86dp"
                android:background="@color/dot_light_screen1"
                android:fontFamily="sans-serif-light"
                android:hint="Name Club"
                android:paddingLeft="8dp"
                android:textAlignment="center"
                android:textSize="22sp"
                android:elevation="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edPL"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="166dp"
                android:background="@color/dot_light_screen1"
                android:fontFamily="sans-serif-light"
                android:hint="PL"
                android:paddingLeft="8dp"
                android:textAlignment="center"
                android:textSize="22sp"
                android:elevation="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edGD"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="246dp"
                android:background="@color/dot_light_screen1"
                android:fontFamily="sans-serif-light"
                android:hint="GD"
                android:paddingLeft="8dp"
                android:textAlignment="center"
                android:textSize="22sp"
                android:elevation="16dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edPts"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="336dp"
                android:background="@color/dot_light_screen1"
                android:fontFamily="sans-serif-light"
                android:hint="Pts"
                android:paddingLeft="8dp"
                android:elevation="16dp"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/edLogo"
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="416dp"
                android:background="@color/dot_light_screen1"
                android:fontFamily="sans-serif-light"
                android:hint="Logo"
                android:paddingLeft="8dp"
                android:elevation="16dp"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btSave"
                android:layout_width="90dp"
                android:layout_marginTop="490dp"
                android:layout_height="60dp"
                android:hint="SAVE"
                android:backgroundTint="@color/dot_light_screen2"
                android:layout_marginLeft="115dp"
                android:elevation="16dp"
                />
            <Button
                android:id="@+id/btShow"
                android:layout_width="105dp"
                android:layout_height="60dp"
                android:hint="Show all"
                android:layout_marginTop="490dp"
                android:layout_marginLeft="210dp"
                android:backgroundTint="@color/dot_light_screen2"
                android:elevation="16dp"
                />



        </FrameLayout>
    </LinearLayout>
</ScrollView>