<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".ui.Login2Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btBack"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="back"
            android:drawableLeft="@drawable/baseline_arrow_back_24"
            android:backgroundTint="@color/cardview_shadow_end_color"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginLeft="60dp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="65dp"
        android:src="@drawable/logofinal" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"/>
    <EditText
        android:id="@+id/edEmail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Enter your email"
        android:textStyle="italic"
        android:paddingRight="180dp"
        android:textColorHint="#A3A1A1"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"

        />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"/>
    <EditText
        android:id="@+id/edPassword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="@color/white"
        android:hint="Enter your password"
        android:textStyle="italic"
        android:paddingRight="210dp"
        android:textColorHint="#A3A1A1"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:inputType="textPassword"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:hint="Register"
            android:textColorHint="@color/white"
            android:textSize="18dp"
            android:textStyle="italic"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:backgroundTint="@color/cardview_shadow_end_color"
            />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="Fogot Password?"
            android:textColorHint="@color/white"
            android:textSize="18dp"
            android:textStyle="italic"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="70dp"
            android:backgroundTint="@color/cardview_shadow_end_color"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btLogin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="50dp"
        android:drawableRight="@drawable/baseline_navigate_next"
        android:gravity="center"
        android:hint="LOG IN"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:backgroundTint="#BC269B"
        android:layout_marginTop="8dp"
        android:textColorHint="@color/white"/>
</LinearLayout>